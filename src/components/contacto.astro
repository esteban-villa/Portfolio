---
import Whatsapp from '../assets/whatsapp.svg'
import Copy from '../assets/copy.svg'
import Flecha from '../assets/flecha.svg'
---
<div id="contacto" class="bg-bg-porfolio py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-color-text">
        <div class="text-center space-y-8">
            <!-- Header Section -->
            <div class="space-y-4">
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-green-500/20 to-blue-500/20 border border-green-500/30 rounded-full">
                    <span class="text-color-text-relevant">✉️ Contacto</span>
                </div>
                <h2 class="text-4xl lg:text-5xl font-bold bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">
                    ¡Vamos a Conversar!
                </h2>
                <div class="w-24 h-1 bg-gradient-to-r from-green-500 to-blue-500 mx-auto rounded-full"></div>
            </div>

            <!-- Contact Methods -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-2xl mx-auto">
                <!-- WhatsApp Button -->
                <a href="https://wa.me/573219157229" target="_blank" class="group">
                    <div class="relative bg-gradient-to-br from-green-600/20 to-emerald-600/20 backdrop-blur-sm rounded-2xl p-6 border border-green-500/30 hover:border-green-400/60 transition-all duration-500 hover:transform hover:-translate-y-2 hover:shadow-xl hover:shadow-green-500/25 h-32 flex items-center justify-center">
                        <div class="absolute inset-0 bg-gradient-to-br from-green-600/30 to-emerald-600/30 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                        
                        <div class="relative z-10 flex flex-col items-center justify-center gap-3">
                            <div class="p-3 bg-green-500/20 rounded-full group-hover:bg-green-500/30 group-hover:scale-110 transition-all duration-300">
                                <Whatsapp class="w-8 h-8 text-green-400"></Whatsapp>
                            </div>
                            <span class="text-xl font-medium group-hover:text-green-300 transition-colors duration-300">WhatsApp</span>
                        </div>
                    </div>
                </a>

                <!-- Email Copy Button -->
                <div id="copyButton" class="group cursor-pointer">
                    <div class="relative bg-gradient-to-br from-blue-600/20 to-purple-600/20 backdrop-blur-sm rounded-2xl p-6 border border-blue-500/30 hover:border-blue-400/60 transition-all duration-500 hover:transform hover:-translate-y-2 hover:shadow-xl hover:shadow-blue-500/25 h-32 flex items-center justify-center">
                        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/30 to-purple-600/30 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                        
                        <div class="relative z-10 flex flex-col items-center justify-center gap-3">
                            <div class="p-3 bg-blue-500/20 rounded-full group-hover:bg-blue-500/30 group-hover:scale-110 transition-all duration-300">
                                <Copy class="w-8 h-8 text-blue-400"></Copy>
                            </div>
                            <span class="text-xl font-medium group-hover:text-blue-300 transition-colors duration-300">Email</span>
                            <p id="texto" class="text-xs text-gray-400 group-hover:text-blue-300 transition-colors duration-300 font-mono opacity-70">
                                villa310esteban@gmail.com
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Back to Top Button -->
            <div class="pt-8">
                <div id="subir" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-gray-600/20 to-gray-800/20 backdrop-blur-sm rounded-full border border-gray-500/30 hover:border-gray-400/60 cursor-pointer transition-all duration-500 hover:transform hover:-translate-y-1 hover:shadow-lg hover:shadow-gray-500/25 group">
                    <span class="text-gray-400 group-hover:text-gray-300 transition-colors duration-300 font-medium">Subir</span>
                    <div class="p-2 bg-gray-500/20 rounded-full group-hover:bg-gray-500/30 group-hover:-rotate-12 transition-all duration-300">
                        <Flecha class="w-4 h-4 text-gray-400 group-hover:text-gray-300"></Flecha>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const copyButton = document.getElementById('copyButton')! as HTMLElement;
    const textInput = document.getElementById('texto') as HTMLElement;

    //console.log(textInput.textContent)
    copyButton.addEventListener('click',()=>{
        const textContent = textInput.textContent ?? '';
        navigator.clipboard.writeText(textContent)
    });

    const subir = document.getElementById('subir') as HTMLElement;
    subir.addEventListener('click',()=>{
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  
</script>