---
import Logo from '../assets/logo.svg';
import HeaderSvg from '../assets/header.svg';
import Linkedin from '../assets/linkedin.svg';
import Github from '../assets/github.svg';
import Download from '../assets/download.svg';
import WhatsApp from '../assets/whatsapp.svg';
---

<div class="bg-bg-porfolio font-mono">
	<div class="flex justify-center items-center h-24 ">

		<!-- div para pantallas medianas y grandes -->
		<div class="hidden sm:flex sm:justify-between sm:items-center sm:w-10/12 sm:h-1/2 sm:px-5 sm:rounded-lg bg-bg-content">
			<div class="mr-5">
				<Logo class="w-11"/>
			</div>
			<nav class="text-color-text list-none flex justify-between lg:w-7/12 md:w-full sm:w-full [&>li]:transition-colors [&>li]:duration-500"> 
				<li class="hover:text-color-text-relevant cursor-pointer ">Inicio</li>
				<li class="hover:text-color-text-relevant cursor-pointer ">Acerca de Mi</li>
				<li class="hover:text-color-text-relevant cursor-pointer ">Habilidades</li>
				<li class="hover:text-color-text-relevant cursor-pointer ">Educación</li>
				<li class="hover:text-color-text-relevant cursor-pointer ">Experiencia</li>
				<li class="hover:text-color-text-relevant cursor-pointer ">contacto</li>
			</nav>
		</div>
		<!-- div para pantallas pequeñas -->
		<div class="sm:hidden">
			<div class="flex justify-around min-w-72">
				<a href="https://www.linkedin.com/in/esteban-villa-monsalve-a6511a175/" target="_blank">
					<Linkedin class="w-12"></Linkedin>	
				</a>
				<a href="https://github.com/esteban-villa" target="_blank">
					<Github class="w-12"></Github>	
				</a>		
			</div>
		</div>
	</div>
	<div class="hidden sm:flex sm:justify-between sm:items-center w-10/12 h-[30rem]  m-auto" >
		<div class="w-1/3">
			<h1 class="text-5xl text-white">Esteban <br> Villa </h1>
			<p class="text-color-text">Software Development</p>
			<div class="flex justify-between max-w-28">
				<a href="www.linkedin.com/in/esteban-villa-monsalve-a6511a175" target="_blank">
					<Linkedin class="w-10"></Linkedin>	
				</a>
				<a href="https://github.com/esteban-villa" target="_blank">
					<Github class="w-10"></Github>	
				</a>		
			</div>
		</div>
		<div class="w-1/3">
			<HeaderSvg class="max-w-96"/>
		</div>
		<div class="w-1/3 text-color-text flex flex-col items-end">
			<button class="flex justify-center items-center border-2 border-solid border-text-color-Download rounded-lg lg:h-10 lg:w-48 md:w-40 md:h-12 sm:w-40 sm:h-12 mb-5 hover:bg-text-color-Download transition-colors duration-500">
				<Download class="w-12"></Download>
				<p>Descargar CV</p> 
			</button>
			
			<button class="flex justify-center items-center border-2 border-solid border-text-color-Download rounded-lg lg:h-10 lg:w-48 md:w-40 md:h-12 sm:w-40 sm:h-12 hover:bg-text-color-Download transition-colors duration-500">
				<WhatsApp class="w-12"></WhatsApp>
				<p class="text-center">Vamos a Hablar</p>
			</button>
		</div>
	</div>
	<!-- div para pantallas pequeñas -->
	<div class="sm:hidden w-5/6 m-auto flex flex-col items-center">
		<div class="min-h-80">
			<HeaderSvg class="max-w-72"/>
		</div>
		<div class="min-h-20 mb-5">
			<h1 class="text-5xl text-white">Esteban Villa </h1>
			<p class="text-color-text">Software development</p>
		</div>
		<div class=" text-color-text flex justify-around w-full mb-10">
			<button class="flex justify-center items-center border-2 border-solid border-text-color-Download rounded-lg w-2/5 hover:bg-text-color-Download transition-colors duration-500">
				<Download class="w-10"></Download>
				<p>Descargar CV</p> 
			</button>
			
			<button class="flex justify-center items-center border-2 border-solid border-text-color-Download rounded-lg w-2/5 hover:bg-text-color-Download transition-colors duration-500">
				<WhatsApp class="w-12"></WhatsApp>
				<p class="text-center">Vamos a hablar</p>
			</button>
		</div>
	</div>
</div>

