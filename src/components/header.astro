---
import Logo from '../assets/logo.svg';
import HeaderSvg from '../assets/header.svg';
import Linkedin from '../assets/linkedin.svg';
import Github from '../assets/github.svg';
import Download from '../assets/download.svg';
import WhatsApp from '../assets/whatsapp.svg';
---

<div id="Inicio" class="bg-bg-porfolio font-mono">
	<div class="flex justify-center items-center h-24 relative">
		<!-- div para pantallas medianas y grandes -->
		<div class="hidden sm:flex sm:justify-between sm:items-center sm:w-10/12 sm:h-16 sm:px-6 sm:rounded-2xl bg-gradient-to-r from-gray-900/80 to-gray-800/60 backdrop-blur-md border border-gray-700/50 hover:border-blue-500/30 transition-all duration-500 shadow-lg hover:shadow-blue-500/20">
			<div class="mr-5 p-2 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-xl hover:from-blue-500/30 hover:to-purple-500/30 transition-all duration-300">
				<Logo class="w-11"/>
			</div>
			<nav class="text-color-text list-none flex justify-between lg:w-7/12 md:w-full sm:w-full [&>li]:transition-all [&>li]:duration-300"> 
				<li class="hover:text-blue-400 cursor-pointer relative group px-3 py-2 rounded-lg hover:bg-blue-500/10">
					<a href="#Inicio">Inicio</a>
					<div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-400 group-hover:w-full transition-all duration-300"></div>
				</li>
				<li class="hover:text-blue-400 cursor-pointer relative group px-3 py-2 rounded-lg hover:bg-blue-500/10">
					<a href="#sobremi">Sobre Mí</a>
					<div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-400 group-hover:w-full transition-all duration-300"></div>
				</li>
				<li class="hover:text-blue-400 cursor-pointer relative group px-3 py-2 rounded-lg hover:bg-blue-500/10">
					<a href="#Skills">Skills</a>
					<div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-400 group-hover:w-full transition-all duration-300"></div>
				</li>
				<li class="hover:text-blue-400 cursor-pointer relative group px-3 py-2 rounded-lg hover:bg-blue-500/10">
					<a href="#Trayectoria">Trayectoria</a>
					<div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-400 group-hover:w-full transition-all duration-300"></div>
				</li>
				<li class="hover:text-blue-400 cursor-pointer relative group px-3 py-2 rounded-lg hover:bg-blue-500/10">
					<a href="#contacto">Contacto</a>
					<div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-400 group-hover:w-full transition-all duration-300"></div>
				</li>
			</nav>
		</div>
		<!-- div para pantallas pequeñas -->
		<div class="sm:hidden">
			<div class="flex justify-around min-w-72 bg-gradient-to-r from-gray-900/80 to-gray-800/60 backdrop-blur-md rounded-2xl p-4 border border-gray-700/50">
				<a href="https://www.linkedin.com/in/esteban-villa-monsalve-a6511a175/" target="_blank" class="p-3 bg-blue-500/20 rounded-xl hover:bg-blue-500/30 hover:scale-110 transition-all duration-300">
					<Linkedin class="w-10"></Linkedin>	
				</a>
				<a href="https://github.com/esteban-villa" target="_blank" class="p-3 bg-gray-500/20 rounded-xl hover:bg-gray-500/30 hover:scale-110 transition-all duration-300">
					<Github class="w-10"></Github>	
				</a>		
			</div>
		</div>
	</div>
	<div class="hidden sm:flex sm:justify-between sm:items-center w-10/12 h-[30rem] m-auto" >
		<div class="w-1/3 relative group">
			<!-- Fondo decorativo con gradiente -->
			<div class="absolute -inset-4 bg-gradient-to-r from-blue-500/10 via-purple-500/5 to-transparent rounded-3xl blur-xl opacity-70 group-hover:opacity-100 transition-opacity duration-500"></div>
			
			<!-- Contenido principal -->
			<div class="relative z-10 space-y-4">
				<div class="space-y-2">
					<h1 class="text-5xl text-white font-bold bg-gradient-to-r from-white via-blue-100 to-white bg-clip-text hover:from-blue-200 hover:via-white hover:to-purple-200 transition-all duration-500">
						Esteban <br> Villa 
					</h1>
					<div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full opacity-80"></div>
				</div>
				
				<p class="text-color-text text-lg font-medium tracking-wide hover:text-blue-300 transition-colors duration-300">
					Software Development
				</p>
				
				<!-- Iconos sociales mejorados - Solo visible en desktop -->
				<div class="flex gap-4 mt-6">
					<a href="https://www.linkedin.com/in/esteban-villa-monsalve-a6511a175" target="_blank" class="group/social relative">
						<div class="absolute -inset-2 bg-gradient-to-r from-blue-500/20 to-blue-600/20 rounded-xl opacity-0 group-hover/social:opacity-100 transition-opacity duration-300 blur-sm"></div>
						<div class="relative p-3 bg-blue-500/10 hover:bg-blue-500/20 rounded-xl border border-blue-500/20 hover:border-blue-400/40 transition-all duration-300 hover:transform hover:-translate-y-1 hover:shadow-lg hover:shadow-blue-500/25">
							<Linkedin class="w-8 h-8 text-blue-400 group-hover/social:text-blue-300 group-hover/social:scale-110 transition-all duration-300"></Linkedin>	
						</div>
					</a>
					<a href="https://github.com/esteban-villa" target="_blank" class="group/social relative">
						<div class="absolute -inset-2 bg-gradient-to-r from-gray-500/20 to-gray-600/20 rounded-xl opacity-0 group-hover/social:opacity-100 transition-opacity duration-300 blur-sm"></div>
						<div class="relative p-3 bg-gray-500/10 hover:bg-gray-500/20 rounded-xl border border-gray-500/20 hover:border-gray-400/40 transition-all duration-300 hover:transform hover:-translate-y-1 hover:shadow-lg hover:shadow-gray-500/25">
							<Github class="w-8 h-8 text-gray-400 group-hover/social:text-gray-300 group-hover/social:scale-110 transition-all duration-300"></Github>	
						</div>
					</a>		
				</div>
			</div>
		</div>
		<div class="w-1/3 relative group flex justify-center items-center">
			<!-- Fondo decorativo con gradiente -->
			<div class="absolute inset-0 bg-gradient-to-br from-purple-500/10 via-blue-500/5 to-cyan-500/10 rounded-full blur-2xl opacity-60 group-hover:opacity-90 transition-opacity duration-700"></div>
			
			<!-- SVG principal con efectos -->
			<div class="relative z-10 transform group-hover:scale-105 transition-all duration-500">
				<HeaderSvg class="max-w-96 drop-shadow-2xl filter group-hover:drop-shadow-[0_0_30px_rgba(59,130,246,0.3)] transition-all duration-500"/>
			</div>
			
			<!-- Partículas flotantes -->
			<div class="absolute top-1/4 left-1/4 w-2 h-2 bg-blue-400/40 rounded-full animate-bounce" style="animation-delay: 0.5s;"></div>
			<div class="absolute top-3/4 right-1/4 w-1.5 h-1.5 bg-purple-400/40 rounded-full animate-bounce" style="animation-delay: 1.5s;"></div>
			<div class="absolute top-1/2 right-1/3 w-1 h-1 bg-cyan-400/40 rounded-full animate-bounce" style="animation-delay: 2s;"></div>
		</div>
		<div class="w-1/3 text-color-text flex flex-col items-end space-y-4">
			<a href="_astro/EstebanVillaMonsalve.pdf" target="_blank" class="group">
				<button class="flex justify-center items-center bg-gradient-to-r from-blue-600/20 to-purple-600/20 hover:from-blue-600/40 hover:to-purple-600/40 border border-blue-500/30 hover:border-blue-400 rounded-xl lg:h-12 lg:w-52 md:w-44 md:h-12 sm:w-44 sm:h-12 backdrop-blur-sm transition-all duration-500 hover:transform hover:-translate-y-1 hover:shadow-lg hover:shadow-blue-500/25">
					<Download class="w-6 h-6 mr-2 group-hover:rotate-12 transition-transform duration-300"></Download>
					<span class="font-medium">Descargar CV</span> 
				</button>
			</a>
			
			<a href="https://wa.me/573219157229" target="_blank" class="group">
				<button class="flex justify-center items-center bg-gradient-to-r from-green-600/20 to-emerald-600/20 hover:from-green-600/40 hover:to-emerald-600/40 border border-green-500/30 hover:border-green-400 rounded-xl lg:h-12 lg:w-52 md:w-44 md:h-12 sm:w-44 sm:h-12 backdrop-blur-sm transition-all duration-500 hover:transform hover:-translate-y-1 hover:shadow-lg hover:shadow-green-500/25">
					<WhatsApp class="w-6 h-6 mr-2 group-hover:scale-110 transition-transform duration-300"></WhatsApp>
					<span class="font-medium">Vamos a Hablar</span>
				</button>
			</a>
		</div>
	</div>
	<!-- div para pantallas pequeñas -->
	<div class="sm:hidden w-5/6 m-auto flex flex-col items-center py-8">
		<div class="mb-8">
			<HeaderSvg class="max-w-72 mx-auto"/>
		</div>
		<div class="text-center mb-8">
			<h1 class="text-4xl md:text-5xl text-white font-bold mb-2">Esteban Villa</h1>
			<div class="w-16 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full mx-auto mb-2"></div>
			<p class="text-color-text text-lg">Software Development</p>
		</div>
		<div class="text-color-text flex flex-col sm:flex-row gap-4 w-full max-w-sm">
			<a href="_astro/EstebanVillaMonsalve.pdf" target="_blank" class="group">
				<button class="flex justify-center items-center bg-gradient-to-r from-blue-600/20 to-purple-600/20 hover:from-blue-600/40 hover:to-purple-600/40 border border-blue-500/30 hover:border-blue-400 rounded-xl w-40 h-12 backdrop-blur-sm transition-all duration-500 hover:transform hover:-translate-y-1 hover:shadow-lg hover:shadow-blue-500/25">
					<Download class="w-6 h-6 mr-2 group-hover:rotate-12 transition-transform duration-300"></Download>
					<span class="text-sm font-medium">Descargar CV</span> 
				</button>
			</a>
			
			<a href="https://wa.me/573219157229" target="_blank" class="group">
				<button class="flex justify-center items-center bg-gradient-to-r from-green-600/20 to-emerald-600/20 hover:from-green-600/40 hover:to-emerald-600/40 border border-green-500/30 hover:border-green-400 rounded-xl w-40 h-12 backdrop-blur-sm transition-all duration-500 hover:transform hover:-translate-y-1 hover:shadow-lg hover:shadow-green-500/25">
					<WhatsApp class="w-6 h-6 mr-2 group-hover:scale-110 transition-transform duration-300"></WhatsApp>
					<span class="text-sm font-medium">Vamos a hablar</span>
				</button>
			</a>
		</div>
	</div>
</div>

