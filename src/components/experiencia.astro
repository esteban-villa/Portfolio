---
import Code from '../assets/iconsExperiencia/code.svg';
import Book from '../assets/iconsExperiencia/book.svg';
import Laptop from '../assets/iconsExperiencia/laptop.svg';
---
<div class="bg-bg-porfolio font-mono py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-12">
            <!-- Proyectos Card -->
            <div class="group relative bg-gradient-to-br from-gray-900/60 to-gray-800/40 backdrop-blur-sm rounded-2xl p-6 border border-gray-700/50 hover:border-blue-500/50 transition-all duration-500 hover:transform hover:-translate-y-3 hover:shadow-2xl hover:shadow-blue-500/25 text-color-text">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-600/10 to-cyan-600/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <div class="relative z-10 flex flex-col items-center text-center">
                    <div class="mb-4 p-4 bg-blue-500/20 rounded-full group-hover:bg-blue-500/30 group-hover:scale-110 transition-all duration-300">
                        <Laptop class="w-12 h-12 text-blue-400"></Laptop>
                    </div>
                    <div class="mb-2">
                        <span class="text-3xl font-bold text-blue-400 group-hover:text-blue-300">+3</span>
                    </div>
                    <p class="text-lg font-medium group-hover:text-blue-300">Proyectos</p>
                </div>
            </div>

            <!-- Experiencia Card -->
            <div class="group relative bg-gradient-to-br from-gray-900/60 to-gray-800/40 backdrop-blur-sm rounded-2xl p-6 border border-gray-700/50 hover:border-green-500/50 transition-all duration-500 hover:transform hover:-translate-y-3 hover:shadow-2xl hover:shadow-green-500/25 text-color-text">
                <div class="absolute inset-0 bg-gradient-to-br from-green-600/10 to-emerald-600/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <div class="relative z-10 flex flex-col items-center text-center">
                    <div class="mb-4 p-4 bg-green-500/20 rounded-full group-hover:bg-green-500/30 group-hover:scale-110 transition-all duration-300">
                        <Code class="w-12 h-12 text-green-400"></Code>
                    </div>
                    <div class="mb-2">
                        <span class="text-3xl font-bold text-green-400 group-hover:text-green-300">+1</span>
                    </div>
                    <p class="text-lg font-medium group-hover:text-green-300">Año de experiencia</p>
                </div>
            </div>

            <!-- Estudios Card -->
            <div class="group relative bg-gradient-to-br from-gray-900/60 to-gray-800/40 backdrop-blur-sm rounded-2xl p-6 border border-gray-700/50 hover:border-purple-500/50 transition-all duration-500 hover:transform hover:-translate-y-3 hover:shadow-2xl hover:shadow-purple-500/25 text-color-text">
                <div class="absolute inset-0 bg-gradient-to-br from-purple-600/10 to-pink-600/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <div class="relative z-10 flex flex-col items-center text-center">
                    <div class="mb-4 p-4 bg-purple-500/20 rounded-full group-hover:bg-purple-500/30 group-hover:scale-110 transition-all duration-300">
                        <Book class="w-12 h-12 text-purple-400"></Book>
                    </div>
                    <div class="mb-2">
                        <span class="text-3xl font-bold text-purple-400 group-hover:text-purple-300">+5</span>
                    </div>
                    <p class="text-lg font-medium group-hover:text-purple-300">Años de estudios</p>
                </div>
            </div>
        </div>

        <!-- Description Card -->
        <div class="hidden sm:block">
            <div class="bg-gradient-to-r from-gray-900/60 to-gray-800/40 backdrop-blur-sm rounded-2xl p-8 border border-gray-700/50 hover:border-gray-600/70 transition-all duration-500 hover:shadow-xl">
                <div class="grid grid-cols-3 gap-8 text-color-text">
                    <div class="text-center group">
                        <div class="h-1 w-12 bg-gradient-to-r from-blue-500 to-cyan-500 mx-auto mb-4 rounded-full group-hover:w-16 transition-all duration-300"></div>
                        <p class="text-sm leading-relaxed group-hover:text-blue-300 transition-colors duration-300">
                            Proyectos de servicios web y administración
                        </p>
                    </div>
                    
                    <div class="text-center group">
                        <div class="h-1 w-12 bg-gradient-to-r from-green-500 to-emerald-500 mx-auto mb-4 rounded-full group-hover:w-16 transition-all duration-300"></div>
                        <p class="text-sm leading-relaxed group-hover:text-green-300 transition-colors duration-300">
                            Experiencia en empresas y proyectos del sector
                        </p>
                    </div>
                    
                    <div class="text-center group">
                        <div class="h-1 w-12 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto mb-4 rounded-full group-hover:w-16 transition-all duration-300"></div>
                        <p class="text-sm leading-relaxed group-hover:text-purple-300 transition-colors duration-300">
                            Ingeniería y bootcamps en desarrollo de software
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>